<div id="comment<%=(comment.id)%>">
<p>
  <div><%= gravatar_for comment.user, size: 25 %><b><%= comment.user.name %></b><small> (<%= time_ago_in_words(comment.created_at) %> ago)</small></div>
  <br/>
  <%= comment.content %>


<br/>
<% if current_user?(comment.user) %>
<%= link_to 'Delete', resource_comment_path(@resource, comment), :remote => :true, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
</p>
</div>