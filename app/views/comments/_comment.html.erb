<div id="comment<%=(comment.id)%>">
<p>
  <div><%= gravatar_for comment.user, size: 25 %> <%= time_ago_in_words(comment.created_at) %> ago</div>
  <b><%= comment.user.name %></b>
  <%= comment.content %>


<br/>
<% if current_user?(comment.user) %>
<%= link_to 'Delete', resource_comment_path(@resource, comment), :remote => :true, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
</p>
</div>