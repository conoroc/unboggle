<% provide(:title, @category.name) %>
<div class="row">
  <aside class="span2">
    <%= render 'layouts/side_nav' %>
  </aside>



  <div class="span10 opaque">



    <h1>Listing Resources</h1>

    <div class="resource_content">
      <div id="res_header">
        <h5><%= sort_link @search, :title, "Title" %></h5>
        <h5>Source</h5>
        <h5>Category</h5>
        <h5>Level</h5>
        <h5>Year</h5>
        <h5>Cost</h5>
        <h5> Medium</h5>
        <h5> Rating</h5>
        <h5> Description</h5></div>


      <div class="resources">

        <div>

          <% @category.resources.each do |resource| %>
              <div id="details">
                <div  id="rtitle"><%= link_to resource.title, resource %></div>
                <div class="res_details" id="rsource"><%= resource.source %></div>
                <div class="res_details" id="rcat"><%= resource.category.name %></div>
                <div class="res_details" id="rlevel"><%= resource.level %></div>
                <div class="res_details" id="ryear"><%= resource.year %></div>
                <div class="res_details" id="rcost"><%= resource.cost %></div>
                <div class="res_details" id="rmedium"><%= resource.medium %></div>
                <div class="res_details" id="rrating"><%= resource.rating %></div>
                <div class="res_details" id="rdesc"> <%= resource.description.truncate(20) %></div>
              </div>

          <% end %>


        <%= will_paginate @resources %>
        <%= nether(@resources.total_pages, resources_path, ".resources") %>
        </div>
      </div>

    </div>



  </div>









</div>
