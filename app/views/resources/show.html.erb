<% provide(:title, 'Resources') %>
<div class="row">
  <aside class="span2">
    <%= render 'layouts/side_nav' %>
  </aside>
  <div class="span10 opaque">
    <ul class="breadcrumb">
      <li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
      <li><%= link_to @resource.category.name, category_path(@resource.category.id) %> <span class="divider">/</span></li>
      <li class="active"><%= @resource.title %></li>
    </ul>
    <div class="span9">

      <p>
        <b>Title:</b>
        <%= @resource.title %> <%= link_to "Go Check It Out", @resource.link, :class => "btn btn-success", :target => "_blank" %>
      </p>

      <p>
        <b>Source:</b>
        <%= @resource.source %>
      </p>

      <p>
        <b>Category:</b>
        <%= @resource.category.name %>
      </p>

      <p>
        <b>Level:</b>
        <%= @resource.level %>
      </p>

      <p>
        <b>Year:</b>
        <%= @resource.year %>
      </p>

      <p>
        <b>Cost:</b>
        <%= @resource.cost %>
      </p>

      <p>
        <b>Medium:</b>
        <%= @resource.medium %>
      </p>

      <p>
        <b>Rating:</b>
        <%= @resource.rating %>
      </p>

      <p>
        <b>Description:</b>
        <%= @resource.description %>
      </p>


      <%= link_to 'Edit', edit_resource_path(@resource) %> |
      <%= link_to 'Back', resources_path %>


    </div>

    <%= render 'comments' %>
  </div>

</div>